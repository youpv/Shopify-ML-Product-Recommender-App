generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model stores {
  shop     String   @id
  isActive Boolean? @default(false)
}

model session {
  id      String  @id
  content String? @db.Text
  shop    String?
}

